.post-title h1
  font-size 3rem

article
  .post-meta
    margin-bottom 1rem

  .post-content
    table
      border-collapse collapse
      width 100%
      margin 1rem 0

    figure
      display block

      pre
        margin 0
        margin-top 0px
        margin-right 0px
